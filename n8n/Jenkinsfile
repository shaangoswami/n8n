pipeline {
    agent any

    environment {
        // The image you already pushed to Docker Hub
        DOCKER_IMAGE = "shaangoswami/n8n-image" 
        DOCKER_TAG = "v1" 
        KUBE_NAMESPACE = "default"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withKubeConfig([credentialsId: 'my-k8s-config']) {
                    // Tell Jenkins to work inside the subfolder where your YAMLs are
                    dir('n8n/n8n') {
                        sh """
                        echo "Deploying image: ${DOCKER_IMAGE}:${DOCKER_TAG}"
                        
                        # Update deployment.yaml with the exact image and tag
                        sed -i 's|image: .*|image: ${DOCKER_IMAGE}:${DOCKER_TAG}|g' k8s/n8n-deployment.yaml
                        
                        # Apply the Kubernetes files
                        kubectl apply -f k8s/ -n ${KUBE_NAMESPACE}
                        
                        # Force a restart so the pod picks up the change immediately
                        kubectl rollout restart deployment/n8n -n ${KUBE_NAMESPACE}
                        
                        # Wait for the deployment to finish
                        kubectl rollout status deployment/n8n -n ${KUBE_NAMESPACE}
                        """
                    }
                }
            }
        }
    }
}
